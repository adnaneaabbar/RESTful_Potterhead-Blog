<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit The "<em><%= blog.title %></em>" Blog</div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea required>
        </div>
        <div class="field">
            <button type="submit" class="ui secondary big inverted button">Edit Blog!</button>
        </div>
    </form>
</div>




<% include partials/footer %>